{
  "name": "lspd-pa-pruefungssystem",
  "version": "2.0.0",
  "description": "LSPD Police Academy Prüfungssystem",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable --config.win.signAndEditExecutable=false",
    "build-dir": "electron-builder --win dir --config.win.signAndEditExecutable=false"
  },
  "author": "LSPD Police Academy",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.lspd.pa-pruefungssystem",
    "productName": "LSPD PA Prüfungssystem",
    "win": {
      "target": "portable",
      "signAndEditExecutable": false
    },
    "portable": {
      "artifactName": "LSPD_PA_Pruefungssystem.exe"
    },
    "files": [
      "main.js",
      "index.html",
      "LSPD_logo.png"
    ]
  }
}
